{%- comment -%}
This file is meant for setting Liquid variables for Jekyll; it *SHOULD NOT* emit
any rendered HTML.
{%- endcomment -%}

{%- if page.locale -%}
  {%- assign locale = page.locale %}
{%- else -%}
  {%- assign locale = "en-US" %}
{%- endif -%}

{%- assign locale_data = site.data.locales[locale] -%}
{%- assign locale_data_page = locale_data.pages[page.id] -%}
